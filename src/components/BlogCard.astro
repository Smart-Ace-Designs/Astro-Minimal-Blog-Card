---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";

interface Props {
  imagePath: string;
  altText: string;
  title: string;
  author: string;
  tags?: string[];
}

const { imagePath, altText, title, author, tags = [] } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath])
  throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<div class="relative mx-auto max-w-[368px] rounded-xl bg-theme-card px-4 pt-4 pb-5 shadow-theme">
  <article aria-labelledby="article-title">
    <Image
      src={images[imagePath]()}
      alt={altText}
      class="max-w-full rounded-lg"
      loading={"eager"}
      format="webp"
    />
    {
      tags.length > 0 ? (
        <ul class="my-4 flex flex-wrap gap-2" aria-label="Article tags">
          {tags.map((tag) => (
            <li class="inline-block rounded-full bg-theme-light-purple px-3 py-1">
              <span class="flex items-center text-[0.625rem] font-bold text-theme-purple">
                {tag}
              </span>
            </li>
          ))}
        </ul>
      ) : (
        <div class="my-2" />
      )
    }
    <h1 id="article-title" class="mb-1.5 text-lg font-semibold text-theme-dark-blue">{title}</h1>
    <p class="mb-5 text-sm text-theme-slate"><slot /></p>
    <hr class="absolute left-0 w-full text-theme-light-gray" />
    <p class="pt-4 text-xs text-theme-slate">{author}</p>
  </article>
</div>
