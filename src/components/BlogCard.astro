---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";

interface Props {
  imagePath: string;
  altText: string;
  title: string;
  author: string;
  tags?: string[];
}

const { imagePath, altText, title, author, tags = [] } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath])
  throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<div class="bg-theme-card shadow-theme relative mx-auto max-w-[368px] rounded-xl px-4 pt-4 pb-5">
  <article>
    <Image
      src={images[imagePath]()}
      alt={altText}
      class="max-w-full rounded-lg"
      loading={"eager"}
      format="webp"
    />
    <div class="my-4 flex flex-wrap gap-2">
      {
        tags.length > 0 &&
          tags.map((tag) => (
            <div class="bg-theme-light-purple inline-block rounded-full px-3 py-1">
              <span class="text-theme-purple flex items-center text-[0.625rem] font-bold">
                {tag}
              </span>
            </div>
          ))
      }
    </div>
    <div class="mb-4">
      <h1 class="text-theme-dark-blue mb-1.5 text-lg font-semibold">{title}</h1>
      <p class="text-theme-slate text-sm">
        <slot />
      </p>
    </div>
    <div class="border-theme-light-gray absolute bottom-13 left-0 w-full border-t"></div>
    <p class="text-theme-slate pt-5 text-xs">{author}</p>
  </article>
</div>
